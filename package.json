{
  "name": "kestrel-db",
  "productName": "Kestrel DB",
  "version": "1.0.0-beta.1",
  "description": "Kestrel DB - Precision Data Exploration for MySQL",
  "main": "./out/main/index.js",
  "author": "Taz Greenwood",
  "homepage": "https://kestreldb.com",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "test": "vitest",
    "test:main": "vitest --config vitest.config.main.ts",
    "test:renderer": "vitest --config vitest.config.renderer.ts",
    "test:unit": "vitest run tests/unit",
    "test:component": "vitest run tests/component",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "publish:mac": "npm run build && electron-builder --mac --publish always",
    "publish:win": "npm run build && electron-builder --win --publish always",
    "publish:linux": "npm run build && electron-builder --linux --publish always",
    "publish:all": "npm run build && electron-builder --mac --win --linux --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/lodash.throttle": "^4.1.9",
    "@types/react-syntax-highlighter": "^15.5.13",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "lodash.throttle": "^4.1.1",
    "lucide-react": "^0.554.0",
    "monaco-editor": "^0.55.1",
    "mysql2": "^3.15.3",
    "react-syntax-highlighter": "^16.1.0",
    "tailwindcss": "^4.1.17",
    "use-debounce": "^10.0.6",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^20.0.11",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^4.0.16"
  }
}
